<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.protrainner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProTrainner">
        <activity android:name=".activity.WelcomeActivity"></activity>
        <activity android:name=".activity.DetailPriceListMemberActivity" />
        <activity android:name=".activity.PriceListMemberActivity" />
        <activity android:name=".activity.FormTrainerActivity" />
        <activity android:name=".activity.FormMemberActivity" />
        <activity android:name=".activity.HomeTrainerActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme4">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>