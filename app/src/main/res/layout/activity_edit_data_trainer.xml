<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.EditDataTrainerActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:elevation="10dp"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ab_editdatatrainer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/arroworen"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah\nData Diri"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:gravity="left"
            android:textSize="42sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama lengkap :"/>
        <EditText
            android:id="@+id/et_ubahdata_trainer_nl"
            android:layout_width="match_parent"
            app:backgroundTint="@color/pt1"
            android:layout_height="wrap_content"
            android:hint=""/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            app:backgroundTint="@color/pt1"
            android:layout_height="wrap_content"
            android:text="Usia :"/>
        <EditText
            android:id="@+id/et_ubahdata_trainer_usia"
            android:layout_width="match_parent"
            app:backgroundTint="@color/pt1"
            android:layout_height="wrap_content"
            android:hint=""/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis kelamin :"/>
        <EditText
            android:id="@+id/et_ubahdata_trainer_jk"
            android:layout_width="match_parent"
            app:backgroundTint="@color/pt1"
            android:layout_height="wrap_content"
            android:hint=""/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ttl :"/>
        <EditText
            android:id="@+id/et_ubahdata_trainer_ttl"
            android:layout_width="match_parent"
            app:backgroundTint="@color/pt1"
            android:layout_height="wrap_content"
            android:hint=""/>


        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengalaman :"/>
        <EditText
            android:id="@+id/et_ubahdata_trainer_pengalaman"
            android:layout_width="match_parent"
            app:backgroundTint="@color/pt1"
            android:layout_height="wrap_content"
            android:hint=""/>


        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat jogja :"/>
        <EditText
            android:id="@+id/et_ubahdata_trainer_aj"
            android:layout_width="match_parent"
            app:backgroundTint="@color/pt1"
            android:layout_height="wrap_content"
            android:hint=""/>


        <android.widget.Button
            android:id="@+id/btn_perubahan_trainer"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:elevation="10dp"
            android:background="@drawable/button_bg_abu"
            android:layout_marginBottom="16dp"
            android:text="Simpan Perubahan"/>




    </LinearLayout>
</ScrollView>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/backgroundprofile"
        android:scaleType="centerCrop"
        android:elevation="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>