<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailMemberList2Activity">

    <ImageView
        android:id="@+id/ab_memberlist2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/arroworen"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_ftl_dml"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/pt2"
        app:cardCornerRadius="30dp"
        android:clickable="true"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="32dp"
            android:paddingTop="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="FITNESS\nTRAINING LOG"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:layout_marginTop="-50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icontl"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_du_dml"
        android:clickable="true"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/pt2"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="32dp"
            android:paddingTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="DATA\nPENGUKURAN"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:layout_marginTop="-50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icondp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>