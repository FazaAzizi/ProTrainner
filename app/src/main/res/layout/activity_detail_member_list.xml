                <TextView
                    android:id="@+id/parq_out_cedera"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="" />

            </TableRow>

            <TableRow android:background="#74F4F9F9">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/black"
                    android:text="Riwayat cacat tubuh" />

                <TextView
                    android:id="@+id/parq_out_cacat"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:textColor="@color/black"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="" />


            </TableRow>

            <TableRow android:background="#74F4F9F9">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/black"
                    android:text="Riwayat perokok aktif" />

                <TextView
                    android:id="@+id/parq_out_rokok"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:textColor="@color/black"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="" />


            </TableRow>

            <TableRow android:background="#74F4F9F9">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/black"
                    android:text="Riwayat gangguan tidur sehari sebelum tes ini berlangsung" />

                <TextView
                    android:id="@+id/parq_out_tidur"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:textColor="@color/black"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="" />


            </TableRow>


        </TableLayout>


